    <body>
      <div class="container">
        <%- include('./partials/flash') %>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card p-4">
            <div style="border-radius:200px; height:100px; width:100px; background: #9ABC66; margin:0 auto;">
              <i class="checkmark">✓</i>
            </div>
              <h1>Order Successfull</h1> 
              <!-- <p>We received your purchase request;<br/> we'll be in touch shortly!</p> -->
              <div>
                <table class="table">
                  <tbody>
                    <tr>
                      <td>Payment Type</td>
                      <td style="text-align: end;"><%=checkoutDetails.paymentStatus%></td>
                    </tr>
                    <tr>
                      <td>Mobile</td>
                      <td style="text-align: end;"><%=userDetails.mobNumber%></td>
                    </tr>
                    <tr>
                      <td>Email</td>
                      <td style="text-align: end;"><%=userDetails.email%></td>
                    </tr>
                    <tr style="font-weight: bolder;">
                      <td>Total Amount</td>
                      <td style="text-align: end;"><%=checkoutDetails.bill%>.00</td>
                    </tr>
                    <tr style="font-size: small;" >
                      <td >Transaction Id</td>
                      <td style="text-align: end;" >#_id_<%=checkoutDetails._id%></td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <div>
                <a style="padding: 5%; text-decoration: none; font-size: small; " href="/">Continue Shopping →</a>
                <a style="padding: 5%; text-decoration: none; font-size: small;" href="/users/orderhistory">View Order History →</a>
              </div>
            </div>
        </div>
      </div>
    </div>

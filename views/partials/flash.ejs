<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show " id="success" role="alert">
        <%= success %>
    </div>
    <% } %>

        <% if(error && error.length) {%>
            <div style="text-align: center;" class="alert alert-danger alert-dismissible fade show" id="error"
                role="alert">
                <p>
                    <%= error %>
                </p>
            </div>
            <% } %>
                <script>
                    setTimeout(function () {
                        $('#error').fadeOut('fast');
                    }, 3000);
                    setTimeout(function () {
                        $('#success').fadeOut('fast');
                    }, 5000); 
                </script>